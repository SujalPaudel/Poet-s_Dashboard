  <!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    
    <meta name="keywords" content="<%= @seo_keywords %>" />



    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

   
  </head>

  <body>

    <%= render 'shared/blog_nav' %>
   

    <!--Start Of Blog Header -->

    <div class="blog-header">
      <div class="container">
        <h1 class="blog-title">My Blog</h1>
        <p class="lead blog-description">Written with Passion And Love</p>
        <p><%= link_to 'Write a New Blog', new_blog_path if logged_in?(:site_admin) %></p>
      </div>
    </div>

    <!--End Of Blog Header -->

    <!--Start Of container and row -->
    <div class="container">

      <div class="row">

        <%= yield %>  <!--yield gives a way to slide in other contents into the master layout file -->
                      <!--pulls out the content from the index page or anyother page -->

        <%= render 'shared/blog_sidebar' %>
      </div>
    </div>  
        


        <!--Start Of Footer -->
        <footer class="blog-footer">
          <p>Blog template built for <a href="https://getbootstrap.com">Bootstrap</a> by <a href="https://twitter.com/mdo">@mdo</a>.</p>
          <p>
            <a href="#">Back to top</a>
          </p>
        </footer>
        <!--End Of Footer -->



        
     


        <%= source_helper("blog") %>

      
    </div>

  </body>
</html>
