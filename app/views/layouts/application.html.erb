<!--This is the master layout file -->
<!--If we had 30 pages, and if we would add 1 navigation item, we need to do it 30 different times
but the presence of this file makes it very easy to customize -->

<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    
    <meta name="keywords" content="<%= @seo_keywords %>" />



    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

   
  </head>

  <body>

    
    <div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">


    
          <%= render 'shared/application_nav'%>

              

          <%= yield %>  <!--yield gives a way to slide in other contents into the master layout file -->

          <%= render 'shared/copyright_footer' %>
      
          <%= alert_generator notice%>
      
          <%= video_tag(
            'HardDrivePhotojpeg.mp4',
            id: 'background',
            autoplay: true,
            loop: true,
            muted: true,
          )
          %>          

        </div>
      </div>
    </div>
  </body>
</html>
